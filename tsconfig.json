{
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": false,
    "module": "commonjs",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/template/**/*"
  ]
}